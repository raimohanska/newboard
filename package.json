{
  "name": "newboard",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run db:start && concurrently \"npm run dev -w frontend\" \"npm run dev -w backend\"",
    "build": "npm run build -w frontend",
    "start": "npm run start -w backend",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:logs": "docker-compose logs -f postgres",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "db:psql": "docker-compose exec postgres psql -U newboard -d newboard",
    "migrate": "npm run migrate:up -w backend",
    "migrate:create": "npm run migrate:create -w backend --",
    "migrate:up": "npm run migrate:up -w backend",
    "docker:build": "docker build -t newboard:latest .",
    "docker:run": "docker run -p 1234:1234 --env-file .env newboard:latest"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

